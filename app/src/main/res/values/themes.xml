<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackTreck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify_green</item> <!-- Spotify green -->
        <item name="colorPrimaryVariant">@color/spotify_green_variant</item>
        <item name="colorOnPrimary">@color/spotify_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spotify_dark_black</item> <!-- Spotify black -->
        <item name="colorSecondaryVariant">@color/spotify_light_black</item>
        <item name="colorOnSecondary">@color/spotify_white</item>

        <!-- Background colors. -->
        <item name="android:windowBackground">@color/spotify_dark_gray</item>
        <item name="android:colorBackground">@color/spotify_dark_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TrackTreck.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TrackTreck.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TrackTreck.LargeComponent</item>
    </style>

    <!-- Shape appearance for rounded components -->
    <style name="ShapeAppearance.TrackTreck.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.TrackTreck.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.TrackTreck.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>